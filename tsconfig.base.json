{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@hospcare/ui": ["packages/ui/src/index.ts"],
      "@hospcare/types": ["packages/types/src/index.ts"],
      "@hospcare/config": ["packages/config/src/index.ts"],
      "@hospcare/db": ["packages/db/src/index.ts"]
    },
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@hospcare/source"]
  }
}
